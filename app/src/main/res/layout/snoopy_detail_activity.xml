<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".ui.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.example.recyclerviewpractice.viewmodel.SnoopyDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/snoopy_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="Snoopy"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline3" />

        <ImageView
            android:id="@+id/snoopy_detail_image"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:contentDescription="Image of Snoopy"
            app:srcCompat="@drawable/woodstock" />

        <TextView
            android:id="@+id/snoopy_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Snoopy is a white beagle and a major character in the Peanuts comic strip created by Charles M. Schulz. " />

        <Button
            android:id="@+id/remove_button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Remove this Snoopy (Don't do that)" />
    </LinearLayout>
</layout>